<div class="row">
  <div class="col sm">
    <form action="/beer/add" method="POST" class="needs-validation"  autocomplete="off" novalidate>
      <div class="form-group d-none">
        <input type="text" name="id" class="form-control" id="id" aria-describedby="id" value="{{id}}">
      </div>
      <div class="form-group">
        <label for="name">Name of Beer</label>
        <input type="text" name="name" class="form-control {{errors.name}}" id="name" aria-describedby="name" value="{{name}}" required>
      </div>
      <div class="form-group">
        <label for="company">Manufacturer</label>
        <input type="text" name="company" class="form-control {{errors.company}}" id="company" aria-describedby="company" value="{{company}}" required>
      </div>
      <div class="form-group">
        <label for="abv">ABV%</label>
        <div class="input-group">
          <input type="decimal" name="abv" class="form-control {{errors.abv}}" id="inlineFormInputGroupUsername" placeholder="abv" value="{{abv}}" required>
          <div class="input-group-append">
            <div class="input-group-text">%</div>
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      {{#if id}}<a href="/beer/remove/{{id}}" class="btn btn-secondary float-right" onclick="return confirm('Are you sure?');">Remove Beer</a>{{/if}}
    </form>
  </div>
</div>
