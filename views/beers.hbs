<div class="row">
  <div class="col sm">
    <h1>Beer Menu</h1>
  </div>
</div>

<div class="row mb-4">
  <div class="col-sm">
    <a href="/beer/add">+ Add a beer</a>
  </div>
</div>

<div class="row">

  {{#each beers}}
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title">{{name}}</h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Company: {{company}}</li>
          <li class="list-group-item">ABV: {{abv}}%</li>
        </ul>
        <div class="card-body text-center">
           <a href="/review/add/{{id}}" class="btn btn-primary">Submit a Review</a>
           <a href="/beer/edit/{{id}}" class="btn btn-secondary">Edit Beer</a>
        </div>
        <div class="card-footer text-muted text-center">
          <h6>{{reviewCount}} Review{{#compare reviewCount ">" 1}}s{{/compare}}</h6>
          {{#if totalScore}}
            <div class="single-chart mx-auto text-center">
              <a href="/review/{{id}}">
              <svg viewBox="0 0 36 36" class="circular-chart blue">
                <path class="circle-bg"
                  d="M18 2.0845
                  a 15.9155 15.9155 0 0 1 0 31.831
                  a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <path class="circle"
                  stroke-dasharray="{{totalScore}}, 100"
                  d="M18 2.0845
                  a 15.9155 15.9155 0 0 1 0 31.831
                  a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <text x="18" y="20.35" class="percentage">{{totalScore}}%</text>
              </svg>
               </a>
            </div>
          {{else}}
            <div class="single-chart mx-auto text-center">
              <svg viewBox="0 0 36 36" class="circular-chart blue">
                <path class="circle-bg"
                  d="M18 2.0845
                  a 15.9155 15.9155 0 0 1 0 31.831
                  a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <path class="circle"
                  stroke-dasharray="0, 100"
                  d="M18 2.0845
                  a 15.9155 15.9155 0 0 1 0 31.831
                  a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <text x="18" y="20.35" class="percentage">Waiting</text>
              </svg>
            </div>
          {{/if}}

        </div>
      </div>
    </div>
  {{else}}
    <div class="col-sm text-center">
      <h1 class="light-text">No Beers</h1>
    </div>
  {{/each}}

</div>
