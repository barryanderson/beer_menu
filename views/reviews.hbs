<div class="row mb-4">
  <div class="col sm">
    <h1>{{beer.name}} Reviews</h1>
    <h6>{{beer.company}}</h6>
  </div>
</div>

<div class="row">
  {{#each reviews}}
    <div class="col-sm-12 col-md-6 col-lg-4">
      <div class="card mb-4">
        <div class="card-header">
          <h5 class="card-title">{{judgeName}}</h5>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Branding
            <span class="badge badge-primary badge-pill">{{branding}}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Aroma
            <span class="badge badge-primary badge-pill">{{aroma}}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Appearance
            <span class="badge badge-primary badge-pill">{{appearance}}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Flavor
            <span class="badge badge-primary badge-pill">{{flavor}}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Mouthfeel
            <span class="badge badge-primary badge-pill">{{mouthfeel}}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Overall
            <span class="badge badge-primary badge-pill">{{overall}}</span>
          </li>
        </ul>
        <div class="card-body text-center">
           <a href="/review/edit/{{id}}" class="btn btn-primary">Edit Review</a>
        </div>
         <div class="card-footer text-muted text-center">
           <div class="single-chart mx-auto text-center">
              <svg viewBox="0 0 36 36" class="circular-chart blue">
                <path class="circle-bg"
                  d="M18 2.0845
                  a 15.9155 15.9155 0 0 1 0 31.831
                  a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <path class="circle"
                  stroke-dasharray="{{totalScore}}, 100"
                  d="M18 2.0845
                  a 15.9155 15.9155 0 0 1 0 31.831
                  a 15.9155 15.9155 0 0 1 0 -31.831"
                />
                <text x="18" y="20.35" class="percentage">{{totalScore}}%</text>
              </svg>
            </div>
         </div>
      </div>
    </div>
  {{else}}
    <div class="col-sm text-center">
      <h1>No Reviews</h1>
    </div>
  {{/each}}
</div>
